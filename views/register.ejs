<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/styleRegister.css">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&family=Montserrat:ital,wght@0,100..900&display=swap" rel="stylesheet">
    <title>Register</title>
</head>
<body>
    <header>
    </header>
    <main>
        <div class="container" id="container">
            <div class="form-container register-container">
                <form action="/userProfiles" method="post">
                    <h1>Terminemos con tu registro</h1>
                        <input type="hidden" name="user_id" id="user_id" />
                    <div class="infield">
                        <label class="titleInput">Fecha de nacimiento</label>
                        <input type="date" placeholder="Birth Date" name="birthDate" required />
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Edad</label>
                        <input type="number" placeholder="Age"  name="age" required />
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Genero</label>
                        <select id="gender" name="gender" required>
                            <option value="MASCULINO">Masculino</option>
                            <option value="FEMENINO">Femenino</option>
                            <option value="OTRO">Otro</option>
                          </select>
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Equipo</label>
                        <input type="text" placeholder="Team" name="team" required />
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Tipo de sangre</label>
                        <select id="bloodType" name="bloodType" required>
                            <option value="A+">A+</option>
                            <option value="O+">O+</option>
                            <option value="B+">B+</option>
                            <option value="AB+">AB+</option>
                            <option value="A-">A-</option>
                            <option value="O-">O-</option>
                            <option value="B-">B-</option>
                            <option value="AB-">AB-</option>
                          </select>
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Telefono</label>
                        <input type="tel" placeholder="Phone" name="phone" required />
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">CURP</label>
                        <input type="text" placeholder="CURP" name="curp" required />
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Ciudad</label>
                        <input type="text" placeholder="City" name="city" required />
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Estado</label>
                        <input type="text" placeholder="State" name="state" required />
                        <label></label>
                    </div>
                    <div class="infield">
                        <label class="titleInput">Categoria</label>
                        <select id="category" name="category" required>
                            <option value="PAÑALES">Pañales</option>
                            <option value="INFANTIL AA">Infantil AA</option>
                            <option value="INFANTIL A">Infantil A</option>
                            <option value="INFANTIL B">Infantil B</option>
                            <option value="INFANTIL C">Infantil C</option>
                            <option value="JUVENIL A">Juvenil A</option>
                            <option value="JUVENIL B">Juvenil B</option>
                            <option value="JUVENIL C">Juvenil C</option>
                            <option value="MASTER 20">Master 20</option>
                            <option value="MASTER 30">Master 30</option>
                            <option value="MASTER 40">Master 40</option>
                            <option value="MASTER 50">Master 50</option>
                            <option value="MASTER 60">Master 60</option>
                            <option value="NOVATO VAR">Novato Var</option>
                            <option value="NOVATO F">Novato F</option>
                            <option value="RECREATIVO">Recreativo</option>
                            <option value="ENDURO">Enduro</option>
                            <option value="INT FEM">Int Fem</option>
                            <option value="ELITE">Elite</option>
                            <option value="ELITE FEM">Elite Fem</option>
                          </select>
                        <label></label>
                    </div>
                    <button class="signBtn">Guardar</button>
                </form>
            </div>
        </div>
        <script>
            const paramURL = window.location.search
            const parametroURL = new URLSearchParams(paramURL);
            for(let valueURL of parametroURL){
                console.log(valueURL);
            }
            const user_id = parametroURL.get('user_id');
            const inputUserId = document.querySelector("#user_id");
            inputUserId.value = (user_id);
        </script>
    </main>
    <footer></footer>
</body>
</html>